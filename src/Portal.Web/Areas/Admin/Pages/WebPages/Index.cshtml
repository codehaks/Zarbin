@page
@model Portal.Web.Areas.Admin.Pages.WebPages.IndexModel

@{
    ViewData["Title"] = "پنل ها";
}

<p>
    <a asp-page="Create" class="btn btn-primary">پنل جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Panel[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Panel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Panel[0].Hidden)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Panel[0].ReadOnly)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Panel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hidden)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Name">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Name">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
