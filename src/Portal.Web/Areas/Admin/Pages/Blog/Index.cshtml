@page
@model Portal.Web.IndexModel

@{
    ViewData["Title"] = "پست ها";
}
<br />
<p>
    <a asp-page="Create" class="btn btn-primary">پست جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Post[0].TimeCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Hits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].IsPublished)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Post)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TimeCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPublished)
                </td>
                <td>
                    <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.Id">ویرایش</a>
                    <a asp-page="./Details" class="btn btn-dark" asp-route-id="@item.Id">نمایش</a>
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
