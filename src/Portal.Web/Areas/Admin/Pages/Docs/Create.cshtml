@page
@model Portal.Web.Areas.Admin.Pages.Docs.CreateModel

@{
    ViewData["Title"] = "آپلود";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" class="p-3" enctype="multipart/form-data">


            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="آپلود فایل" class="btn btn-primary" />
                <a asp-page="Index">بازگشت به لیست فایلها</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
