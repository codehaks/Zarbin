@page
@model Portal.Web.Areas.Admin.Pages.Products.IndexModel

@{
    ViewData["Title"] = "فروشگاه";
}
<br />
<p>
    <a asp-page="Create" class="btn btn-primary">محصول جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
      
           
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.Id">ویرایش</a> 
                <a asp-page="./Details" class="btn btn-dark" asp-route-id="@item.Id">نمایش</a> 
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
